    <button id="clear" >CLEAR</button>
    <div>
    <textarea id="mytext"></textarea>
    </div>    <script>
        but = document.getElementById("clear")
            but.addEventListener("click", function () {
                console.log("called");
                text = document.getElementById("mytext");
                text.value = "";
                console.log(text);
            })
</script>
